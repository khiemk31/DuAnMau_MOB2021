<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEDED"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMaPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Mã Phiếu Mượn : 01"
            android:textColor="#7E7272"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="#1B48EA"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvTenTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:hint="Thành Viên :"
        android:text="Thành Viên : Nguyễn Văn Minh"
        android:textColor="#090909"
        android:textSize="20sp"
        android:textStyle="bold" />>

    <TextView
        android:id="@+id/tvTenSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:hint="Tên Sách :"
        android:text="Tên Sách: Cơ Sở Dữ Liệu"
        android:textColor="#020202"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvTienThue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:hint="Tiền Thuê : 10000"
        android:text="Tiền Thuê  : 11000"
        android:textColor="#090909"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvNgayPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:hint="Ngày Thuê :"
        android:text="Ngày Thuê : 20/10/2021"
        android:textColor="#090909"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTraSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="Đã Trả Sách"
        android:textColor="#3C4AD1"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>